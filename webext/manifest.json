{
  "manifest_version": 2,
  "name": "readlater://",
  "version": "1.6.0",
  "description": "Save files to readlater:// using native host",
  "icons": {
    "16": "icons/icon-gray-16.png",
    "19": "icons/icon-gray-19.png",
    "32": "icons/icon-gray-32.png",
    "38": "icons/icon-gray-38.png",
    "48": "icons/icon-gray-48.png",
    "64": "icons/icon-gray-64.png",
    "128": "icons/icon-gray-128.png"
  },
  "permissions": [
    "activeTab",
    "nativeMessaging"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-gray-16.png",
      "19": "icons/icon-gray-19.png",
      "32": "icons/icon-gray-32.png",
      "38": "icons/icon-gray-38.png",
      "48": "icons/icon-gray-48.png",
      "64": "icons/icon-gray-64.png",
      "128": "icons/icon-gray-128.png"
    },
    "default_title": "readlater://"
  },
  "commands": {
    "save-for-later": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      },
      "description": "Save for later"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "readlater@dbhattarai.info.np",
      "strict_min_version": "79.0"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
