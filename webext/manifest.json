{
  "manifest_version": 2,
  "name": "readlater://",
  "version": "1.1",
  "description": "Save files to readlater:// using native host",
  "icons": {
    "48": "icons/icon-48.png",
    "24": "icons/icon-24.png"
  },
  "permissions": [
    "activeTab",
    "nativeMessaging"
  ],
  "browser_action": {
    "default_icon": {
      "19": "icons/icon-19.png",
      "38": "icons/icon-38.png"
    },
    "default_title": "readlater://"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "readlater@dbhattarai.info.np",
      "strict_min_version": "58.0"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
